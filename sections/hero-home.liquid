<section class="hero-home" data-section-id="{{ section.id }}" data-section-type="hero-home">
  <div class="hero-home__container container">
    <div class="hero-home__grid">
      
      <!-- Content Side -->
      <div class="hero-home__content" data-aos="fade-right">
        <h1 class="hero-home__title h1">
          {{ section.settings.heading }}
        </h1>
        <p class="hero-home__subtitle">
          {{ section.settings.subheading }}
        </p>
        <div class="hero-home__cta">
          {% if section.settings.cta_text != blank %}
            <a href="{{ section.settings.cta_link }}" class="btn btn--primary btn--large">
              {{ section.settings.cta_text }}
            </a>
          {% endif %}
          {% if section.settings.cta_text_secondary != blank %}
            <a href="{{ section.settings.cta_link_secondary }}" class="btn btn--secondary btn--large">
              {{ section.settings.cta_text_secondary }}
            </a>
          {% endif %}
        </div>
        
        <!-- Trust Badges -->
        {% if section.settings.show_trust_badges %}
          <div class="hero-home__trust-badges">
            <div class="trust-badge">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z" fill="#5c899d"/>
              </svg>
              <span>{{ section.settings.badge_1_text }}</span>
            </div>
            <div class="trust-badge">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                <path d="M12 1L3 5V11C3 16.55 6.84 21.74 12 23C17.16 21.74 21 16.55 21 11V5L12 1Z" fill="#5c899d"/>
              </svg>
              <span>{{ section.settings.badge_2_text }}</span>
            </div>
            <div class="trust-badge">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                <path d="M19 3H5C3.89 3 3 3.9 3 5V19C3 20.1 3.89 21 5 21H19C20.11 21 21 20.1 21 19V5C21 3.9 20.11 3 19 3ZM9 17H7V10H9V17ZM13 17H11V7H13V17ZM17 17H15V13H17V17Z" fill="#5c899d"/>
              </svg>
              <span>{{ section.settings.badge_3_text }}</span>
            </div>
          </div>
        {% endif %}
      </div>

      <!-- Image Side -->
      <div class="hero-home__image" data-aos="fade-left">
        {% if section.settings.image %}
          <img src="{{ section.settings.image | img_url: '1000x' }}" 
               alt="{{ section.settings.heading }}"
               loading="eager"
               class="hero-home__img">
        {% else %}
          <div class="hero-home__placeholder">
            {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {% endif %}
      </div>

    </div>
  </div>

  <!-- Wave Divider -->
  <div class="hero-home__wave">
    <svg viewBox="0 0 1440 320" preserveAspectRatio="none">
      <path fill="#fffcef" d="M0,96L48,112C96,128,192,160,288,160C384,160,480,128,576,122.7C672,117,768,139,864,144C960,149,1056,139,1152,122.7C1248,107,1344,85,1392,74.7L1440,64L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path>
    </svg>
  </div>
</section>

{% schema %}
{
  "name": "Hero Home",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Tu oficina, donde tú quieras."
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Libérate del escritorio. Encuentra la comodidad ergonómica perfecta para trabajar."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Primary Button Text",
      "default": "Comprar ahora"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Primary Button Link"
    },
    {
      "type": "text",
      "id": "cta_text_secondary",
      "label": "Secondary Button Text",
      "default": "Ver más"
    },
    {
      "type": "url",
      "id": "cta_link_secondary",
      "label": "Secondary Button Link"
    },
    {
      "type": "checkbox",
      "id": "show_trust_badges",
      "label": "Show Trust Badges",
      "default": true
    },
    {
      "type": "text",
      "id": "badge_1_text",
      "label": "Badge 1 Text",
      "default": "Calidad Premium"
    },
    {
      "type": "text",
      "id": "badge_2_text",
      "label": "Badge 2 Text",
      "default": "Envío Gratis"
    },
    {
      "type": "text",
      "id": "badge_3_text",
      "label": "Badge 3 Text",
      "default": "+1000 Clientes"
    }
  ],
  "presets": [
    {
      "name": "Hero Home"
    }
  ]
}
{% endschema %}
