<section class="cta-section" data-section-id="{{ section.id }}" data-section-type="cta-section">
  <div class="cta-section__container container">
    <div class="cta-section__content" data-aos="fade-up">
      <h2 class="cta-section__title h2">{{ section.settings.heading }}</h2>
      {% if section.settings.subheading != blank %}
        <p class="cta-section__subtitle">{{ section.settings.subheading }}</p>
      {% endif %}
      
      <div class="cta-section__buttons">
        {% if section.settings.cta_text != blank %}
          <a href="{{ section.settings.cta_link }}" class="btn btn--primary btn--large">
            {{ section.settings.cta_text }}
          </a>
        {% endif %}
        {% if section.settings.cta_text_secondary != blank %}
          <a href="{{ section.settings.cta_link_secondary }}" class="btn btn--secondary btn--large">
            {{ section.settings.cta_text_secondary }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</section>

<style>
  .cta-section {
    padding: var(--spacing-xl) 0;
    background: linear-gradient(135deg, var(--color-primary) 0%, #4a7082 100%);
    color: var(--color-white);
  }
  
  .cta-section__content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }
  
  .cta-section__title {
    color: var(--color-white);
    margin-bottom: var(--spacing-md);
  }
  
  .cta-section__subtitle {
    font-size: 1.25rem;
    margin-bottom: var(--spacing-lg);
    color: rgba(255, 255, 255, 0.9);
  }
  
  .cta-section__buttons {
    display: flex;
    gap: var(--spacing-sm);
    justify-content: center;
    flex-wrap: wrap;
  }
</style>

{% schema %}
{
  "name": "CTA Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "¿Listo para trabajar desde donde quieras?"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Únete a miles de profesionales que ya han mejorado su forma de trabajar."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Primary Button Text",
      "default": "Comprar ahora"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Primary Button Link"
    },
    {
      "type": "text",
      "id": "cta_text_secondary",
      "label": "Secondary Button Text",
      "default": "Saber más"
    },
    {
      "type": "url",
      "id": "cta_link_secondary",
      "label": "Secondary Button Link"
    }
  ],
  "presets": [
    {
      "name": "CTA Section"
    }
  ]
}
{% endschema %}
