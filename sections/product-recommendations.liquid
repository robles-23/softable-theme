{% if recommendations.performed and recommendations.products_count > 0 %}
  <div class="product-recommendations">
    <div class="container">
      <h2 class="h3">Tambi√©n te puede interesar</h2>

      <div class="product-grid">
        {% for product in recommendations.products limit: 4 %}
          <div class="product-card">
            <a href="{{ product.url }}" class="product-card__image-wrapper">
              {% if product.featured_image %}
                <img src="{{ product.featured_image | img_url: '500x' }}"
                     alt="{{ product.title }}"
                     loading="lazy">
              {% else %}
                {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
              {% endif %}
            </a>

            <div class="product-card__info">
              <h3 class="product-card__title">
                <a href="{{ product.url }}">{{ product.title }}</a>
              </h3>

              <div class="product-card__price">
                {% if product.compare_at_price > product.price %}
                  <span class="product-card__price-compare">{{ product.compare_at_price | money }}</span>
                {% endif %}
                <span class="product-card__price-current">{{ product.price | money }}</span>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>

  <style>
    .product-recommendations {
      padding: var(--spacing-xl) 0;
      background-color: var(--color-secondary);
    }

    .product-recommendations h2 {
      text-align: center;
      margin-bottom: var(--spacing-lg);
    }
  </style>
{% endif %}

{% schema %}
{
  "name": "Product Recommendations",
  "settings": []
}
{% endschema %}
