<section class="features" data-section-id="{{ section.id }}" data-section-type="features">
  <div class="features__container container">
    
    {% if section.settings.heading != blank %}
      <div class="features__header" data-aos="fade-up">
        <h2 class="features__title h2">{{ section.settings.heading }}</h2>
        {% if section.settings.subheading != blank %}
          <p class="features__subtitle">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="features__grid">
      {% for block in section.blocks %}
        {% if block.type == 'feature' %}
          <div class="feature-card" data-aos="fade-up" data-aos-delay="{{ forloop.index0 | times: 100 }}" {{ block.shopify_attributes }}>
            {% if block.settings.icon != blank %}
              <div class="feature-card__icon">
                <img src="{{ block.settings.icon | img_url: '100x' }}" alt="{{ block.settings.title }}">
              </div>
            {% else %}
              <div class="feature-card__icon-placeholder">
                <svg width="48" height="48" viewBox="0 0 48 48" fill="none">
                  <rect width="48" height="48" rx="12" fill="#5c899d" opacity="0.1"/>
                  <path d="M24 14L28 22H32L26 28L28 36L24 32L20 36L22 28L16 22H20L24 14Z" fill="#5c899d"/>
                </svg>
              </div>
            {% endif %}
            <h3 class="feature-card__title h4">{{ block.settings.title }}</h3>
            <p class="feature-card__description">{{ block.settings.description }}</p>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Features",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Diseñado para tu comodidad"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Cada detalle pensado para mejorar tu experiencia de trabajo"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Ergonómico"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Diseño ergonómico que se adapta a tu postura natural."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Features",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "title": "Comfort",
            "description": "Diseño ergonómico que se adapta a tu cuerpo"
          }
        },
        {
          "type": "feature",
          "settings": {
            "title": "Quality",
            "description": "Materiales premium de máxima durabilidad"
          }
        },
        {
          "type": "feature",
          "settings": {
            "title": "Efficiency",
            "description": "Optimiza tu espacio de trabajo al máximo"
          }
        }
      ]
    }
  ]
}
{% endschema %}
