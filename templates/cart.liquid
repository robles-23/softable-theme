<div class="cart-page">
  <div class="container">
    <h1 class="cart-page__title h1">Tu Carrito</h1>

    {% if cart.item_count > 0 %}
      <form action="{{ routes.cart_url }}" method="post" class="cart-page__form">
        <div class="cart-page__items">
          {% for item in cart.items %}
            <div class="cart-item">
              <div class="cart-item__image">
                {% if item.image %}
                  <img src="{{ item.image | img_url: '200x' }}" alt="{{ item.title }}">
                {% endif %}
              </div>
              
              <div class="cart-item__details">
                <h3 class="cart-item__title">
                  <a href="{{ item.url }}">{{ item.product.title }}</a>
                </h3>
                {% unless item.variant.title contains 'Default' %}
                  <p class="cart-item__variant">{{ item.variant.title }}</p>
                {% endunless %}
                
                <div class="cart-item__price">
                  {{ item.final_line_price | money }}
                </div>
              </div>

              <div class="cart-item__quantity">
                <div class="quantity-selector">
                  <button type="button" class="quantity-selector__btn" onclick="updateQuantity({{ forloop.index }}, -1)">-</button>
                  <input type="number" 
                         name="updates[]" 
                         id="updates_{{ item.key }}" 
                         value="{{ item.quantity }}" 
                         min="0"
                         data-line="{{ forloop.index }}"
                         class="quantity-selector__input">
                  <button type="button" class="quantity-selector__btn" onclick="updateQuantity({{ forloop.index }}, 1)">+</button>
                </div>
              </div>

              <div class="cart-item__remove">
                <button type="button" 
                        onclick="removeItem({{ forloop.index }})"
                        class="cart-item__remove-btn">
                  ×
                </button>
              </div>
            </div>
          {% endfor %}
        </div>

        <div class="cart-page__footer">
          <div class="cart-page__totals">
            <div class="cart-total">
              <span class="cart-total__label">Subtotal:</span>
              <span class="cart-total__value">{{ cart.total_price | money }}</span>
            </div>
            <p class="cart-page__note">Los gastos de envío se calculan en el checkout</p>
          </div>

          <div class="cart-page__actions">
            <a href="{{ routes.all_products_collection_url }}" class="btn btn--secondary">
              Seguir comprando
            </a>
            <button type="submit" name="checkout" class="btn btn--primary btn--large">
              Proceder al pago
            </button>
          </div>
        </div>
      </form>
    {% else %}
      <div class="cart-page__empty">
        <p>Tu carrito está vacío</p>
        <a href="{{ routes.all_products_collection_url }}" class="btn btn--primary">
          Ir a la tienda
        </a>
      </div>
    {% endif %}
  </div>
</div>

<script>
  function updateQuantity(line, change) {
    const input = document.querySelector(`input[data-line="${line}"]`);
    const currentValue = parseInt(input.value);
    const newValue = Math.max(0, currentValue + change);
    input.value = newValue;
    
    if (newValue === 0) {
      removeItem(line);
    } else {
      updateCart();
    }
  }

  function removeItem(line) {
    const input = document.querySelector(`input[data-line="${line}"]`);
    input.value = 0;
    updateCart();
  }

  function updateCart() {
    document.querySelector('.cart-page__form').submit();
  }
</script>

